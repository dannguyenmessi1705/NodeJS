<%- include('../includes/head.ejs') %>
</head>
<body>
    <%- include('../includes/nav.ejs') %>
    <main>
        <div class="d-flex align-items-center py-2">
             <!-- FLASH MESSAGE -->
             <% if(successLogin) { %>
                <div data-aos="fade-down" class="d-inline-block p-2 text-center mx-auto fw-bold text-success border rounded border-success bg-success-subtle">
                    <%= successLogin %>
                </div>
            <% } %>
        </div>
        <% if (items.length > 0) { %>
            <div class="d-flex flex-wrap justify-content-around align-items-stretch">
                <% items.forEach((item) => { %>
                <article class="shadow-sm d-flex flex-column align-items-center justify-content-center w-20rem max-w-95 text-center bg-white m-1 p-1 rounded-6">
                    <header class="p-4 d-flex flex-column justify-content-center align-items-center">
                        <h1 class="product__title"><%= item.name %></h1>
                    </header>
                    <div class="w-100">
                        <img class="w-50" src="/<%=item.url%>" alt="A Product">
                    </div>
                    <div class="p-4 d-flex flex-column justify-content-center align-items-center">
                        <h2 class="product__price">$<%= item.price %></h2>
                        <p class="product__description"><%= item.description %></p>
                    </div>
                    <div class="p-4 text-center">
                        <!-- POST CART  -->
                        <% if(authenticate) { %>
                            <%- include('../includes/addCart.ejs', {item: item}) %>
                            <!-- Thêm object {item: item} để thẻ chỉ xác định duy nhất 1 item trong vòng lặp có nhiều items -->
                        <% } %> 
                    </div>
                </article>
                <% }) %>
            </div>
            <%- include('../includes/pagination.ejs') %>
        <% } else { %>
            <div class="empty">
                <h1>The item is empty</h1>
            </div>
        <% } %>
    </main>
<%- include('../includes/end.ejs') %>